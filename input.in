Global:
  input structure: structure_file.ext
  box size: x y z
  periodic: True
  log path: logs/

EMIN:
  optimiser: BFGS
  calculator: EMT
  steps: 10
  output: emin.pdb

NVE:
  name: Name of run shown in log file
  calculator: filename (name of python script 'filename.py' that defines a custom calculator)
  steps: 10
  temperature: 300
  time step: 2
  dump interval: 2
  output: nve.traj

NVT:
  calculator: EMT
  steps: 10
  temperature: 300
  time step: 2
  friction: 0.01
  dump interval: 2
  output: nvt.traj

NPT:
  calculator: EMT
  steps: 10
  temperature: 300
  time step: 2
  thermostat timescale: 0.01  
  external stress: 2
  pfactor: 5
  dump interval: 1
  output: npt.traj
